{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "packages",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2021", "WebWorker", "DOM"],
    "types": ["@cloudflare/workers-types", "node"]
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
